<p style="color: green"><%= notice %></p>

<h1>Enrollments</h1>

<div id="enrollments">
  <table class="table">
    <tr>
      <th>Student</th>
      <th>Institution</th>
      <th>Course name</th>
      <th>Course price</th>
      <th>Number payments</th>
      <th>Due day</th>
      <th>Actions</th>
    </tr>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%=enrollment.student.name %></td>
        <td><%=enrollment.institution.name %></td>
        <td><%=enrollment.course_name %></td>
        <td><%=enrollment.course_price %></td>
        <td><%=enrollment.number_payments %></td>
        <td><%=enrollment.due_day %></td>
        <td>
          <%= button_to "Edit", edit_enrollment_path(enrollment), method: :get, class: 'btn btn-sm btn-info' %> 
          <%= button_to "Delete", enrollment, method: :delete, class: 'btn btn-sm btn-danger'  %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New enrollment", new_enrollment_path %>
